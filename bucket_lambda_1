import uuid
import json
import boto3
from botocore.exceptions import ClientError
from datetime import datetime, timedelta
import time

s3 = boto3.client('s3')
s3control = boto3.client('s3control')

def add_tags_to_object(bucket_name, object_list, tag_key, tag_value):
    for obj in object_list:
        s3.put_object_tagging(
        Bucket=bucket_name,
        Key=obj,
        Tagging={'TagSet': [{'Key': tag_key,'Value': tag_value}]
        }
    )

def list_objects_in_last_15_days(bucket_name):
    current_date = datetime.now()
    end_date = datetime(current_date.year, current_date.month, current_date.day)
    start_date = end_date - timedelta(days=15)
    response = s3.list_objects_v2(Bucket=bucket_name)
    objects_in_last_15_days = []
    for obj in response.get('Contents', []):
        last_modified_date = obj['LastModified'].replace(tzinfo=None)
        if start_date <= last_modified_date <= end_date:
            objects_in_last_15_days.append(obj['Key'])
    return objects_in_last_15_days

def create_replication_rules(source_bucket, destination_bucket_full_replication, destination_bucket_tag_based_replication, tag_key, tag_value, iam_role_arn):
    s3.put_bucket_replication(
        Bucket=source_bucket,
        ReplicationConfiguration={
            "Role": iam_role_arn,
            "Rules": [
                                {
                    "ID": "full-bucket-replication",
                    "Priority": 1,
                    "Filter": {},
                    "Status": "Enabled",
                    "Destination": {
                        "Bucket": f"arn:aws:s3:::{destination_bucket_full_replication}"
                    },
                    "DeleteMarkerReplication": {
                        "Status": "Disabled"
                    }
                },
                {
                    "ID": "tag-based-replication",
                    "Priority": 2,
                    "Filter": {
                        "Tag": {
                            "Key": tag_key,
                            "Value": tag_value
                        }
                    },
                    "Status": "Enabled",
                    "Destination": {
                        "Bucket": f"arn:aws:s3:::{destination_bucket_tag_based_replication}"
                    },
                    "DeleteMarkerReplication": {
                        "Status": "Disabled"
                    }
                }
            ]
        }
    )

def create_batch_job(account_id, source_bucket, client_request_token, iam_role_arn):
    response = s3control.create_job(
        AccountId=account_id,
        ConfirmationRequired=False,
        Operation={"S3ReplicateObject": {}},
        Priority=10,
        Report={
            'Enabled' : False
        },
        # Report={
        #     "Bucket": f"arn:aws:s3:::{destination_bucket}",
        #     "Enabled": True,
        #     "Format": "Report_CSV_20180820",
        #     "ReportScope": "AllTasks"
        # },
        RoleArn=iam_role_arn,
        ClientRequestToken=client_request_token,
        ManifestGenerator={
            "S3JobManifestGenerator": {
                "SourceBucket": f"arn:aws:s3:::{source_bucket}",
                "Filter": {
                    "EligibleForReplication": True
                },
                "EnableManifestOutput": False
            }
        }
    )
    return response

def get_replication_rule(bucket_name):
    response = s3.get_bucket_replication(
        Bucket=bucket_name,
    )
    
    return response["ReplicationConfiguration"]["Role"], response["ReplicationConfiguration"]["Rules"]

def toggle_status_for_replication_rules(bucket_name, iam_role, rules, rule_id_to_disable=list()):
    for rule in rules:
        if rule['ID'] in rule_id_to_disable:
            rule['Status']='Disabled'
        else:
            rule['Status']='Enabled'
            
    s3.put_bucket_replication(
        Bucket=bucket_name,
        ReplicationConfiguration={
            'Role': iam_role,
            'Rules': rules
            }
        )

def wait_for_job_to_activate(account_id, job_id):
    job_status = None
    while job_status != 'Active':
        response = s3control.describe_job(
        AccountId=account_id,
        JobId=job_id
        )
        job_status = response['Job']['Status']
        print(f'JobStatus is {job_status} for JobId {job_id}')
        time.sleep(10)


def lambda_handler(event, context):
    source_bucket = 'cloudformationartifacts1432' #event['SourceBucket']
    destination_bucket_full_replication = 'samplebucketforcostreport' #event['DestinationBucket']
    destination_bucket_tag_based_replication = 'testbucketforendpoint'
    tag_key = 'replicate' #event['TagKey']
    tag_value = 'true' #event['TagValue']
    iam_role_arn = "arn:aws:iam::888:role/batch_service_role"

    account_id = boto3.client('sts').get_caller_identity().get('Account')

    object_list = list_objects_in_last_15_days(source_bucket)
    print(object_list)
    add_tags_to_object(source_bucket, object_list, tag_key, tag_value)

    create_replication_rules(source_bucket, destination_bucket_full_replication, destination_bucket_tag_based_replication, tag_key, tag_value, iam_role_arn)
    iam_role_arn, rules = get_replication_rule(source_bucket)

    client_request_token = str(uuid.uuid4())
    print(client_request_token)
    response = create_batch_job(account_id, source_bucket, client_request_token, iam_role_arn)
    print(response)
    job_id = response['JobId']
    print("my job id:", job_id)
    wait_for_job_to_activate(account_id, job_id)

    return {
        'statusCode': 200,
        'body': 'Success'
    }
